<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_add_edit_layouts">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/cabinImage"
            android:scaleType="centerCrop"
            android:background="@drawable/cabana_photo" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/CabinLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Cabana trei"
                android:textSize="26sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/cabinName"
                style="@style/AudioFileInfoOverlayTextWhite"
                android:layout_above="@+id/priceandlocation"
                android:layout_marginBottom="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_alignParentBottom="true"
                android:id="@+id/priceandlocation"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:text="120 Lei"
                    android:textSize="12sp"
                    android:adjustViewBounds="true"
                    android:drawableLeft="@drawable/ic_price_orange"
                    android:id="@+id/cabinPrice"
                    android:layout_weight="0.5"
                    style="@style/AudioFileInfoOverlayText"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12 km"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_map_marker_orange"
                    android:id="@+id/cabinDistance"
                    android:textColor="@color/white"
                    style="@style/AudioFileInfoOverlayText"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cabinImage"
            android:weightSum="0.9"
            android:padding="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/cabinInfo"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_variant" />
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/cabinDirection"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:src="@drawable/ic_directions"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/cabinFavorite"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>